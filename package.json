{
  "name": "intl-dossierv2.0",
  "version": "1.0.0",
  "description": "GASTAT International Dossier Management System",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=10.0.0",
    "npm": "please-use-pnpm",
    "yarn": "please-use-pnpm"
  },
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "db:setup": "pnpm run db:migrate && pnpm run db:seed",
    "db:migrate": "cd backend && pnpm run migrate:up",
    "db:rollback": "cd backend && pnpm run migrate:down",
    "db:seed": "cd backend && pnpm run seed",
    "db:reset": "pnpm run db:rollback && pnpm run db:migrate && pnpm run db:seed",
    "countries:populate": "pnpm exec tsx scripts/populate-countries.ts",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "monitor": "docker-compose up -d prometheus grafana",
    "mobile:start": "cd mobile && pnpm start",
    "mobile:ios": "cd mobile && pnpm run ios",
    "mobile:android": "cd mobile && pnpm run android",
    "clean": "turbo run clean && rm -rf node_modules */node_modules",
    "fresh": "pnpm run clean && pnpm install && pnpm run build",
    "android": "expo run:android",
    "ios": "expo run:ios"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alzahrani-khalid/Intl-Dossier-V2.0.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/alzahrani-khalid/Intl-Dossier-V2.0/issues"
  },
  "homepage": "https://github.com/alzahrani-khalid/Intl-Dossier-V2.0#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "k6": "^0.0.0",
    "lint-staged": "^16.2.1",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "shadcn": "^3.4.0",
    "turbo": "^2.6.0",
    "typescript": "~5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@upstash/redis": "^1.35.5",
    "expo": "^54.0.13",
    "react": "19.2.0",
    "react-native": "0.81.4"
  }
}