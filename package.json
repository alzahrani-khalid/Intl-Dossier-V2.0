{
  "name": "intl-dossierv2.0",
  "version": "1.0.0",
  "description": "GASTAT International Dossier Management System",
  "private": true,
  "packageManager": "npm@10.2.3",
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:migrate": "cd backend && npm run migrate:up",
    "db:rollback": "cd backend && npm run migrate:down",
    "db:seed": "cd backend && npm run seed",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build",
    "monitor": "docker-compose up -d prometheus grafana",
    "clean": "turbo run clean && rm -rf node_modules */node_modules",
    "fresh": "npm run clean && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alzahrani-khalid/Intl-Dossier-V2.0.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/alzahrani-khalid/Intl-Dossier-V2.0/issues"
  },
  "homepage": "https://github.com/alzahrani-khalid/Intl-Dossier-V2.0#readme",
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.19.17",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "@vitejs/plugin-react": "^5.0.3",
    "@vitest/ui": "^3.2.4",
    "axe-playwright": "^2.2.2",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "k6": "^0.0.0",
    "lint-staged": "^16.2.1",
    "playwright": "^1.55.1",
    "prettier": "^3.6.2",
    "shadcn": "^3.3.1",
    "turbo": "^2.5.8",
    "typescript": "5.0",
    "vitest": "^3.2.4"
  }
}
