# GASTAT International Dossier System - Environment Variables

# Node Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/intl_dossier
POSTGRES_PASSWORD=your_secure_password_here

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# API Configuration
API_PORT=3001
FRONTEND_PORT=3000

# Redis
REDIS_URL=redis://localhost:6379

# AnythingLLM Configuration
ANYTHINGLLM_API_URL=http://localhost:3002
ANYTHINGLLM_API_KEY=your_anythingllm_api_key_here
LLM_PROVIDER=openai
EMBEDDING_MODEL_PROVIDER=openai

# JWT & Security
JWT_SECRET=your_jwt_secret_here_min_32_chars_long
JWT_EXPIRY=3600
REFRESH_TOKEN_EXPIRY=604800

# Session
SESSION_SECRET=your_session_secret_here_min_32_chars

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gastat.gov.sa
SMTP_PASS=your_email_password
EMAIL_FROM=no-reply@gastat.gov.sa

# WhatsApp Business API (optional)
WHATSAPP_API_URL=
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_PORT=9090
GRAFANA_PORT=3003

# File Upload
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=pdf,doc,docx,xls,xlsx,png,jpg,jpeg,gif

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# CORS
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Feature Flags
ENABLE_MFA=true
ENABLE_AI_BRIEFS=true
ENABLE_VOICE_COMMANDS=false
ENABLE_ANALYTICS=true